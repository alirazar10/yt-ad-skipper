{
  "manifest_version": 3,
  "name": "Youtube Ad Skipper",
  "version": "1.0",
  "description": "Description of your extension",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "/index.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }]
}
